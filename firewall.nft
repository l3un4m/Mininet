table ip filter {
    chain forward {
        type filter hook input priority 0; policy drop;

        # Reject new incoming TCP connections from 10.12.0.0/24 and 10.2.0.0/24
        ip protocol tcp ip saddr 10.12.0.0/24 ct state new reject
        ip protocol tcp ip saddr 10.2.0.0/24 ct state new reject

        # Allow new TCP connections from 10.1.0.0/24
        ip protocol tcp ip saddr 10.1.0.0/24 ct state new accept

        # Allow established connections to 10.1.0.0/24
        ip protocol tcp ip daddr 10.1.0.0/24 ct state established,related accept
    }
}

